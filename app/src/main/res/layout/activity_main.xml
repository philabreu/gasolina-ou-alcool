<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context="gasolinaoualcool.com.filipe.gasolinaoualcool.MainActivity">

    <EditText
        android:id="@+id/precoAlcoolId"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/precoGasolinaId"
        android:ems="10"
        android:hint="Álcool"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_caixa_texto" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/precoGasolinaId"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Gasolina"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_caixa_texto" />

    <TextView
        android:id="@+id/resultadoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/botaoCalcularId"
        android:layout_alignLeft="@+id/botaoCalcularId"
        android:layout_alignRight="@+id/botaoCalcularId"
        android:layout_alignStart="@+id/botaoCalcularId"
        android:layout_below="@+id/botaoCalcularId"
        android:layout_marginTop="51dp"
        android:textAlignment="center"
        android:textColor="#395305"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botaoCalcularId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/texto_botao_calcular" />

</RelativeLayout>
